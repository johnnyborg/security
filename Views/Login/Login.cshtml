@model Security.ViewModels.LoginLoginViewModel
@{
    ViewData["Title"] = "Inloggen";
}

<h4>Inloggen</h4>
<form method="post" asp-area="" asp-controller="Login" asp-action="login">
    <div class="alert alert-danger" role="alert">
        <strong>Holy guacamole!</strong> Je wachtwoord klopt niet.
    </div>

    <div class="mb-3">
        <label for="email">Email</label>
        <input type="text" id="email" class="form-control" name="email" placeholder="Email" value="@Model.Request.Email" required="">
    </div>

    <div class="mb-3">
        <label for="passowrd">Wachtwoord</label>
        <input type="password" id="password" class="form-control" name="password">
    </div>

    <hr class="mb-4" />
    <button class="btn btn-primary btn-lg btn-block" type="submit">Inloggen</button>
</form>
