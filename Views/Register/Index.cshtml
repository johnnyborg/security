@{
    ViewData["Title"] = "Registreren";
}

<h4>Registreer</h4>
<form>
    <div class="mb-3">
        <label for="address">Naam</label>
        <input type="text" class="form-control" name="name" placeholder="Henk de Vries" required="">
    </div>

    <div class="mb-3">
        <label for="username">Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" required="">
    </div>

    <div class="mb-3">
        <label for="email">Wachtwoord</label>
        <input type="password" class="form-control" name="password">
    </div>

    <div class="mb-3">
        <label for="email">Wachtwoordvalidatie</label>
        <input type="email" class="form-control" name="password-validation">
    </div>

    <hr class="mb-4" />
    <button class="btn btn-primary btn-lg btn-block" type="submit">Registreren</button>
</form>
